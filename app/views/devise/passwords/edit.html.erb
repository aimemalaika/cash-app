<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>  
              <span><%= link_to '', root_path, class: 'fa fa-angle-left back-link' %> RESET PASSWORD</span> 
              <%= f.submit "Update", class: "btn btn-link smallackwoleadge" %>
            </h1>
          </div>
        </div>
      </div>
    </header>
    <div class="login_form">
      <%= f.hidden_field :reset_password_token %>
      <div class="mb-4">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Enter Password with #{@minimum_password_length} characters minimum" unless !@minimum_password_length %>
      </div>
      <div class="mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
      </div>
    </div>
  <% end %>
</div>
