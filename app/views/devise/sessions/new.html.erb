<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {"data-turbo": "false"}) do |f| %>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>  
              <span><%= link_to '', root_path, class: 'fa fa-angle-left back-link' %> LOGIN</span> 
              <%= f.submit "Log In", class: "btn btn-link smallackwoleadge" %>
            </h1>
          </div>
        </div>
      </div>
    </header>
    <div class="login_form">
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: false, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
      </div>
    </div>
  <% end %>
  <%= link_to "Forgot your password ?", new_password_path(resource_name), class: "forgot-passowrd-link" %>
</div>