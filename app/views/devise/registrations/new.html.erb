<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {"data-turbo": "false"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>
              <%= link_to '', root_path, class: 'fa fa-arrow-left back-link' %>  
              <span>REGISTER</span> 
              <%= f.submit "Next", class: "btn btn-link smallackwoleadge" %>
            </h1>
          </div>
        </div>
      </div>
    </header>
    <div class="login_form">
      <div class="mb-4">
        <%= f.text_field :Name, class: "form-control", placeholder: "Full Name" %>
      </div>

      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password with #{@minimum_password_length} characters minimum" unless !@minimum_password_length %>
      </div>
      <div class="mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
      </div>
    </div>
  <% end %>
</div>
